<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
      fx:controller="de.tuc.burgershop.OrderController"
      fx:id="orderViewRoot">
   <children>
      <Accordion>
        <panes>
          <TitledPane animated="false" text="Burger">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="800.0">
                           <children>
                              <HBox prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <Label text="Patty:" />
                                    <ComboBox fx:id="combo_patty" prefWidth="150.0" />
                                 </children>
                              </HBox>
                              <HBox prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <CheckBox fx:id="cbox_double_cheese" mnemonicParsing="false" text="Doppelt Käse" />
                                    <CheckBox fx:id="cbox_double_patty" mnemonicParsing="false" text="Doppeltes Patty" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children></AnchorPane>
            </content>
          </TitledPane>
          <TitledPane animated="false" text="Getränk">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="800.0">
                           <children>
                              <HBox prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <Label text="Getränk:" />
                                    <ComboBox fx:id="combo_drink" prefWidth="150.0" />
                                 </children>
                              </HBox>
                              <CheckBox fx:id="cbox_ice" mnemonicParsing="false" text="Mit Eis" />
                           </children>
                        </VBox>
                     </children></AnchorPane>
            </content>
          </TitledPane>
          <TitledPane animated="false" text="Extras">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <CheckBox fx:id="cbox_fries" mnemonicParsing="false" text="Pommes" />
                     </children></AnchorPane>
            </content>
          </TitledPane>
        </panes>
      </Accordion>
      <HBox alignment="CENTER_RIGHT" fillHeight="false" prefHeight="40.0" prefWidth="780.0">
         <children>
            <Label text="Gesamtpreis: " />
            <Region prefHeight="200.0" prefWidth="10.0" />
            <Label fx:id="label_price" text="0,00€" />
            <Region prefHeight="25.0" prefWidth="25.0" />
            <Button fx:id="btn_order" defaultButton="true" mnemonicParsing="false" onAction="#onOrderPlaced" text="Bestellen" />
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
